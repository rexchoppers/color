{
    "name": "scripturadesign/color",
    "type": "library",
    "description": "Working with colors",
    "keywords": [
        "color",
        "rgb",
        "hex",
        "hsl",
        "terminal color"
    ],
    "homepage": "https://github.com/scripturadesign/color",
    "license": "MIT",
    "authors": [
        {
            "name": "Martin Dilling-Hansen",
            "email": "martindilling@gmail.com",
            "homepage": "http://martindilling.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^5.6|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.*",
        "hamcrest/hamcrest-php": "1.2.*",
        "fabpot/php-cs-fixer": "^1.10"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "Scriptura\\Color\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Scriptura\\Color\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "fix": "./vendor/bin/php-cs-fixer fix"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
